<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".views.fragments.ProfileFragment">


    <ImageView
            app:srcCompat="@drawable/ic_person_black_128dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/profile"
            android:id="@+id/imageView2" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <TextView

            android:layout_width="wrap_content"
            android:text="@string/name_placeholder"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_name" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="8dp"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/fragment_item"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/lv_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view"/>

    <TextView
            android:text="@string/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sign_out"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:padding="4dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_name"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginEnd="32dp"/>

    <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="9dp"
            android:background="@color/white"
            android:src="@drawable/ic_settings_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sign_out"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/tv_sign_out"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />
</androidx.constraintlayout.widget.ConstraintLayout>